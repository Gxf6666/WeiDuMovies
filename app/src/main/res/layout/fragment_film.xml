<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.HomeActivity">
<ScrollView
    android:background="#141931"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_marginTop="@dimen/dp_38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/icon_location"
            android:layout_marginLeft="@dimen/dp_26"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北京"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_36"
            android:textColor="#fff"
            android:textSize="@dimen/dp_15"
            />
        <ImageView
            android:layout_marginTop="@dimen/dp_38"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/icon_search"
            android:layout_marginLeft="@dimen/dp_240"
            android:layout_marginRight="@dimen/dp_26"
            />
    </LinearLayout>
    <com.stx.xhb.xbanner.XBanner
        android:layout_marginTop="@dimen/dp_18"
        app:AutoPlayTime="3000"
        app:isAutoPlay="true"
        app:pointsPosition="RIGHT"
        app:tipTextColor="#fff"
        app:tipTextSize="@dimen/dp_20"
        android:layout_width="@dimen/dp_350"
        android:layout_gravity="center"
        android:id="@+id/xbanner"
        android:layout_height="@dimen/dp_150"/>



  <LinearLayout
      android:background="#1c2243"
      android:layout_marginTop="@dimen/dp_20"
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:layout_height="@dimen/dp_40"
      >

      <ImageView
          app:srcCompat="@mipmap/reying"
          android:layout_gravity="center"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/dp_25"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_marginLeft="@dimen/dp_15"
          android:layout_gravity="center"
          android:text="正在热映"
          android:textColor="#fff"
          android:layout_height="wrap_content"
          />
      <TextView
          android:layout_width="wrap_content"
          android:layout_marginLeft="@dimen/dp_213"
          android:layout_gravity="center"
          android:text="更多"
          android:textColor="#fff"
          android:layout_height="wrap_content"
          />
  </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_reying"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:background="#1c2243"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/dp_40"
        >

        <ImageView
            app:srcCompat="@mipmap/shangying"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_25"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_gravity="center"
            android:text="即将上映"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_213"
            android:layout_gravity="center"
            android:text="更多"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           >
           <android.support.v7.widget.RecyclerView
               android:id="@+id/recycler_shangying"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_300" />
       </LinearLayout>

        <LinearLayout
            android:background="#1c2243"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="@dimen/dp_40"
            >

            <ImageView
                app:srcCompat="@mipmap/remen"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_gravity="center"
                android:text="热门电影"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/dp_213"
                android:layout_gravity="center"
                android:text="更多"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:paddingHorizontal="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120"
                >
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_120"
                    android:id="@+id/rv_remen1"
                    android:scaleType="fitXY"
                    />
                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_15"
                    android:id="@+id/popularname_tv"
                    android:textColor="#fff"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_10"
                    android:id="@+id/popularscore_tv"
                    android:textColor="#fff"
                    android:layout_marginLeft="@dimen/dp_10"
                    />
                </LinearLayout>
                <Button
                    android:layout_width="@dimen/dp_45"
                    android:background="#e8185e"
                    android:text="购票"
                    android:layout_alignParentRight="true"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/dp_20"
                    android:id="@+id/releasedmovie_bt"
                    android:layout_marginRight="@dimen/dp_14"
                    />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_remen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

</LinearLayout>