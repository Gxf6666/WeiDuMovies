<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.activity.MovieDetailsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_500"
        >
        <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/poster"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:orientation="horizontal"
            >
           <ImageView
               android:paddingHorizontal="@dimen/dp_15"
               android:layout_width="@dimen/dp_50"
               android:layout_height="@dimen/dp_50"
               android:layout_marginLeft="@dimen/dp_24"
               android:src="@mipmap/returnhot"
               android:layout_gravity="center"
               android:id="@+id/returnhot"
               />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评分 0.0分"
                android:id="@+id/score"
                android:layout_marginLeft="@dimen/dp_66"
                android:layout_gravity="center"
                />
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论 0.0万条"
            android:id="@+id/comment"
            android:layout_marginLeft="@dimen/dp_110"
            android:layout_gravity="center"
            />
        </LinearLayout>

    </RelativeLayout>
      <LinearLayout
          android:orientation="horizontal"
          android:layout_marginLeft="@dimen/dp_24"
          android:layout_marginRight="@dimen/dp_24"
          android:layout_width="match_parent"
          android:layout_marginBottom="@dimen/dp_40"
          android:layout_height="match_parent">
          <LinearLayout
              android:layout_weight="1"
              android:orientation="vertical"
              android:layout_width="0dp"
              android:layout_height="match_parent">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="@dimen/dp_20"
              android:text="name"
              android:id="@+id/movie_name"
              />
             <LinearLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="@dimen/dp_10"
                 android:orientation="horizontal"
                 >
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="@dimen/dp_15"
                     android:text="类型"
                     android:id="@+id/movie_type"
                     />
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textSize="@dimen/dp_15"
                     android:layout_marginLeft="@dimen/dp_15"
                     android:text="时长"
                     android:id="@+id/movie_duration"
                     />
             </LinearLayout>
              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/dp_10"
                  android:orientation="horizontal"
                  >
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="@dimen/dp_15"
                      android:text="上映时间"
                      android:id="@+id/movie_time"
                      />
                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="@dimen/dp_15"
                      android:layout_marginLeft="@dimen/dp_15"
                      android:text="上映地区"
                      android:id="@+id/movie_area"
                      />
              </LinearLayout>
          </LinearLayout>
          <RelativeLayout
              android:layout_weight="1"
              android:orientation="vertical"
              android:layout_width="0dp"
              android:layout_height="match_parent">

          </RelativeLayout>
      </LinearLayout>


</LinearLayout>